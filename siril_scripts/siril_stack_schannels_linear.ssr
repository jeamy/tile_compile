# Siril 1.4 â€“ Linear Channel-wise Stacking
# ==================================================

requires 1.4.0
setext fit
setcpu 1
setmem 0.9

# --------------------------------------------------
# 1. Sequenz aus registrierten RGB-Frames
# --------------------------------------------------
link r_lights -out=reg

# --------------------------------------------------
# 2. RGB -> R / G / B Sequenzen trennen
# --------------------------------------------------
split reg

# --------------------------------------------------
# 3. R-Kanal stacken (linear)
# --------------------------------------------------
link reg_R -out=R
stack R sum -out=stack_R.fit

# --------------------------------------------------
# 4. G-Kanal stacken (linear, Referenz)
# --------------------------------------------------
link reg_G -out=G
stack G sum -out=stack_G.fit

# --------------------------------------------------
# 5. B-Kanal stacken (linear)
# --------------------------------------------------
link reg_B -out=B
stack B sum -out=stack_B.fit

exit
